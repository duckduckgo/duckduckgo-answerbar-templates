{{#if meta.sourceName}}
    <a class="mapview-marker__popup" href="{{url}}" title="DDG.Text.MORE_AT {{meta.sourceName}}">{{ellipsis name 31}} <span class="mapview-marker__arrow">â–¶</span></a>
{{else}}
    <span class="mapview-marker__popup">
    {{#if name}}
            <span class="mapview-marker__popup__name">{{name}}</span>
        {{/if}}
        {{#if address}}
            <span class="mapview-marker__popup__address">{{address}}</span>
        {{/if}}
        {{#if displayLatLon}}
            <span class="mapview-marker__popup__latlon">{{{displayLatLon}}}</span>
        {{/if}}
        {{#if url}}
            <a class="btn" href="{{url}}">Website</a>
            {{/if}}
        {{#if address}}
            <a href="https://bing.com/maps/?obox=1&q={{address}}" value="{{address}}" id="dir_upstream">Directions on</a>
            <div class="frm__select--maps">
            <select class="js-set-input" id="directions_source">
                <option value="https://bing.com/maps/?obox=1&q=">Bing</option>
                <option value="https://www.here.com/directions/drive//">HERE</option>
                <option value="https://www.google.com/maps/dir//">Google</option>
            </select>
                </div>
            <script>$('#directions_source').on('change',function(){
                    var tmp_addr = $('#dir_upstream').attr('value');
                var upstream_root = $(this).val();
                    var new_address = upstream_root + tmp_addr;
                        console.log("test");
                $('#dir_upstream').attr('href', new_address);
            });</script>
        {{/if}}
    </span>
{{/if}}
