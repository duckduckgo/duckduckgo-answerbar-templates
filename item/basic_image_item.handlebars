<{{#if url}}a href="{{url}}"{{else}}div{{/if}} class="tile  tile--b--i {{#if elClass}}{{elClass}}{{else}}{{#if meta.elClass.tile}}{{meta.elClass.tile}}{{else}}tile--c{{/if}}{{/if}} has-detail  tile--{{meta.id}}  opt--t-xxs">
	<div class="tile__media {{meta.elClass.tileMedia}}">
		<img src="{{imageProxy image}}" alt="{{title}}" class="tile__media__img {{meta.elClass.tileMediaImg}}" />
	</div>
	<div class="tile__body  tile__body--b-i {{meta.elClass.tileBody}}">
		{{#if description}}
			<h6 class="tile__title  tile__title--1  with-sub">{{ellipsis title 55}}</h6>
			<p class="tile__sub--2  opt">{{ellipsis description 56}}</p>
		{{else}}
			<h6 class="tile__title  tile__title--2">{{ellipsis title 55}}</h6>
		{{/if}}
		<div class="tile__tx  tile__rating  one-line {{#if meta.elClass.tileRating}}{{meta.elClass.tileRating}}{{else}}tile__rating--right{{/if}}">
		{{#if meta.options.rating}}
			{{{starRating rating}}}
		{{/if}}
		{{#if meta.options.ratingText}}
			<span class="tile__source  one-line">{{ellipsis ratingText 19}}</span>
		{{/if}}
		</div>
	</div>
</{{#if url}}a{{else}}div{{/if}}>
