<div class="zci__main  zci__main--single-loc">
    <div class="tile--map  js-tile-map">
        <div class="tile__body">
            <div class="tile--map__side">
                <a class="tile__media" href="{{{url}}}">
                    {{#if image}}
                        <div class="tile__media__wrapper">
                            <img src="{{imageProxy image}}" alt="{{title}}" class="tile__media__img" />
                        </div>
                    {{else}}
                        <span class="ddgsi tile__media__no-img">@</span>
                    {{/if}}
                </a>

                {{#and meta.sourceName url}}
                    <div class="tile__more-wrap">
                        {{{moreAt url meta.sourceName className="tile__more-link" iconClassName="tile__favicon" dynamicMoreAtText=5}}}
                    </div>
                {{/and}}
            </div>
            <h4 class="tile__title">
                <a href="{{{url}}}">{{name}}</a>
            </h4>
            <div class="tile--map__main  {{#if hours}}has-hours js-tile-map-with-hours{{/if}}">
                <div class="tile--map__main__not-hours">
                    <div class="tile__rating-and-price">
                        <div class="tile__rating">
                            {{#if meta.options.detail_rating}}
                                {{{include meta.options.detail_rating}}}
                            {{else}}
                                {{#if rating}}
                                    {{{starRating rating}}}
                                {{/if}}
                                {{#if reviews}}
                                    {{{reviewCount reviews url}}}
                                {{/if}}
                            {{/if}}
                        </div>
                        {{#and rating price}}
                            <span class="sep"></span>
                        {{/and}}
                        {{#if price}}
                            <span class="tile__price">{{{priceSymbols price 4}}}</span>
                        {{/if}}
                    </div>
                    {{#if address_lines}}
                        <a class="tile__sub" href="{{directions}}">
                            {{#each address_lines}}
                                {{.}}<br />
                            {{/each}}
                        </a>
                    {{else}}
                        {{#if address}}
                            <p class="tile__sub">{{address}}</p>
                        {{/if}}
                    {{/if}}
                    {{#if phone}}
                        <a class="tile__sub  tile--map__main__bottom" href="tel:{{phone}}">{{phone}}</a>
                    {{/if}}
                    {{#if address}}
                        <a href="https://bing.com/maps/?obox=1&q={{address}}" value="{{address}}" id="dir_upstream">Directions </a>
<!--                        <span style="color:black"> on</span>   -->
                        <span> on</span>
                        <div class="frm__select--noborder">
                             <select style="vertical-align:text-bottom" class="js-set-input" id="directions_source">
                             <option value="https://bing.com/maps/?obox=1&q=">Bing</option>
                             <option value="https://www.here.com/directions/drive//">HERE</option>
                             <option value="https://www.google.com/maps/dir//">Google</option>
                             </select>
                        </div>
                        <script>$('#directions_source').on('change',function(){
                                var tmp_addr = $('#dir_upstream').attr('value');
                                               var upstream_root = $(this).val();
                                var new_address = upstream_root + tmp_addr;
                                $('#dir_upstream').attr('href', new_address);
                        });</script>
                    {{/if}}
                </div>
                {{#if hours}}
                    <div class="tile__hours">
                        <div class="tile__hours-today  js-map-hours-expand">
                            <span class="tile__hours-today__label">DDG.Text.TODAY:</span>
                            <span class="tile__hours-today__hours  {{^if hoursToday}}hours-closed{{/if}}">{{#if hoursToday}}{{hoursToday}}{{else}}DDG.Text.CLOSED{{/if}}</span>
                            <span class="tile__hours-today__expand  ddgsi">^</span>
                        </div>
                        <div class="tile__hours-full">
                            <span class="tile__hours__close  ddgsi  js-map-hours-close">X</span>
                            <table class="tile__hours-full__table">
                                {{#hours}}
                                    <tr {{#if isToday}}class="tile__hours-full__current"{{/if}}>
                                        <td class="tile__hours-full__day">{{day}}:</td>
                                        <td class="tile__hours-full__hours">{{hours}}</td>
                                    </tr>
                                {{/hours}}
                            </table>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
